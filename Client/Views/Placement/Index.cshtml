
@{
    ViewData["Title"] = "Placement Employee";
    Layout = "~/Views/Layouts/Layout.cshtml";
}

<div class="container-fluid">
    <div class="row page-titles">
        <div class="col-md-6 col-8 align-self-center">
            <h3 class="text-themecolor m-b-0 m-t-0">@ViewData["Title"]</h3>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                <li class="breadcrumb-item active">@ViewData["Title"]</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    <ul class="nav nav-tabs mt-3" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="placemnet-tab" data-toggle="tab" href="#placement" role="tab" aria-controls="placement" aria-selected="true"><i class="fa fa-handshake-o"></i> Placement</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="history-tab" data-toggle="tab" href="#history" role="tab" aria-controls="history" aria-selected="false"><i class="fa fa-history"></i> History</a>
                        </li>
                    </ul>

                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="placement" role="tabpanel" aria-labelledby="placement-tab">
                            <div class="table-responsive m-t-40">
                                <table id="Placement" class="table table-striped" width="100%">
                                    <thead>
                                        <tr>
                                            <th>No</th>
                                            <th>Employee Name</th>
                                            <th>Company Name</th>
                                            <th>Interviewer</th>
                                            <th>Interview Date</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="history" role="tabpanel" aria-labelledby="history-tab">
                            <div class="table-responsive m-t-40">
                                <table id="History" class="table table-striped" width="100%">
                                    <thead>
                                        <tr>
                                            <th>No</th>
                                            <th>Employee Name</th>
                                            <th>Company Name</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal content-->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Insert Contract Employee</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col">
                            <label for="StartContract">Start Contract</label>
                            <input type="date" class="form-control" id="StartContract">
                        </div>
                        <div class="col">
                            <label for="EndContract">End Contract</label>
                            <input type="date" class="form-control" id="EndContract">
                        </div>
                    </div>
                    <input type="hidden" id="InterviewId">
                    <input type="hidden" id="UserId">
                    <input type="hidden" id="FullName">
                    <input type="hidden" id="Email_User">
                    <input type="hidden" id="CompanyId">
                </div>
                <div class="modal-footer">
                    <button id="SaveBtn" type="button" onclick="ConfirmPlacement()" class="btn btn-success">Save and Confirm</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Script/Placement.js"></script>
}